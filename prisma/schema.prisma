generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                 String   @id @default(cuid())
  vid                String   @unique
  name               String
  email              String?  @unique
  emailVerified      DateTime?
  image              String?
  avatarUrl          String?
  staffPhotoUrl      String?
  staffBio           String?
  publicStaffProfile Boolean  @default(false)
  extraPermissions   String?  @default("[]")
  role               String   @default("USER")
  discordId          String?
  navigraphId        String?
  friends            User[]   @relation("UserFriends")
  friendOf           User[]   @relation("UserFriends")
  registrations      EventRegistration[]
  accounts           Account[]
  sessions           Session[]
  staffAssignments   StaffAssignment[]
  auditLogs          AuditLog[]
  tourEnrollments    TourEnrollment[]
  tourLegReports     TourLegReport[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String  @id @default(cuid())
  sessionToken String  @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Event {
  id             String               @id @default(cuid())
  slug           String               @unique
  title          String
  description    String
  infoUrl        String?
  startTime      DateTime
  endTime        DateTime
  divisions      String?
  eventType      String?
  hqeAward       Boolean              @default(false)
  routes         String?
  puckLayout     String?
  externalId     String?
  airports       Airport[]            @relation("EventAirports")
  firs           Fir[]                @relation("EventFirs")
  bannerUrl      String?
  isPublished    Boolean              @default(false)
  registrations  EventRegistration[]
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
}

model EventRegistration {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  createdAt DateTime @default(now())

  @@unique([userId, eventId])
}

model Tour {
  id                String           @id @default(cuid())
  slug              String           @unique
  code              String?
  title             String
  description       String?
  rules             String?
  validationRules   String?
  imageUrl          String?
  forumUrl          String?
  awardImageUrl     String?
  startDate         DateTime?
  endDate           DateTime?
  maxFlightsPerDay  Int?
  enforceLegOrder   Boolean          @default(false)
  allowAnyAircraft  Boolean          @default(true)
  allowedAircraft   String?
  minOnlinePercent  Int?
  totalLegsRequired Int?
  isPublished       Boolean          @default(false)
  legs              TourLeg[]
  enrollments       TourEnrollment[]
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}

model TourLeg {
  id            String          @id @default(cuid())
  tourId        String
  legNumber     Int
  departureCode String
  arrivalCode   String
  distanceNm    Int?
  eteMinutes    Int?
  maxSpeed      String?
  maxAltitudeFt Int?
  briefing      String?
  scheduledDate DateTime?
  tour          Tour            @relation(fields: [tourId], references: [id], onDelete: Cascade)
  reports       TourLegReport[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@unique([tourId, legNumber])
}

model TourEnrollment {
  id          String   @id @default(cuid())
  userId      String
  tourId      String
  acceptedAt  DateTime
  completedAt DateTime?
  status      String   @default("ACTIVE")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tour        Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, tourId])
}

model TourLegReport {
  id           String    @id @default(cuid())
  userId       String
  tourLegId    String
  status       String    @default("PENDING")
  submittedAt  DateTime  @default(now())
  reviewedAt   DateTime?
  reviewedById String?
  reviewNote   String?
  flightDate   DateTime?
  callsign     String?
  aircraft     String?
  route        String?
  online       Boolean?
  evidenceUrl  String?
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tourLeg      TourLeg   @relation(fields: [tourLegId], references: [id], onDelete: Cascade)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([userId, tourLegId])
}

model Airport {
  id            String      @id @default(cuid())
  icao          String      @unique
  iata          String?
  name          String
  latitude      Float
  longitude     Float
  altitudeFt    Int
  fir           Fir?        @relation(fields: [firId], references: [id])
  firId         String?
  runways       String
  holdingPoints String
  frequencies   String      @default("[]")
  stands        Stand[]
  sids          Sid[]
  stars         Star[]
  charts        String?
  scenery       String?
  notes         String?
  puckLayout    String?
  events        Event[]     @relation("EventAirports")
  weatherLogs   WeatherLog[]
  atcFrequencies AtcFrequency[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Stand {
  id        String   @id @default(cuid())
  name      String
  lat       Float
  lon       Float
  airport   Airport  @relation(fields: [airportId], references: [id])
  airportId String
}

model Sid {
  id        String   @id @default(cuid())
  name      String
  runway    String
  airport   Airport  @relation(fields: [airportId], references: [id])
  airportId String
  createdAt DateTime @default(now())
  waypoints SidWaypoint[]
}

model Star {
  id        String   @id @default(cuid())
  name      String
  runway    String
  airport   Airport  @relation(fields: [airportId], references: [id])
  airportId String
  createdAt DateTime @default(now())
  waypoints StarWaypoint[]
}

model Fir {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  boundaries  String
  airports    Airport[]
  events      Event[]  @relation("EventFirs")
  frequencies AtcFrequency[]
  fixes       Fix[]
  vors        Vor[]
  ndbs        Ndb[]
}

model AtcFrequency {
  id        String   @id @default(cuid())
  station   String
  name      String?
  frequency String
  lower     String?
  upper     String?
  restricted Boolean @default(false)
  fir       Fir?     @relation(fields: [firId], references: [id])
  firId     String?
  airport   Airport? @relation(fields: [airportId], references: [id])
  airportId String?
  createdAt DateTime @default(now())
  boundaries FrequencyBoundary[]
}

model Fix {
  id        String   @id @default(cuid())
  name      String
  latitude  Float
  longitude Float
  fir       Fir?     @relation(fields: [firId], references: [id])
  firId     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  boundaryPoints FrequencyBoundaryPoint[]
  sidWaypoints   SidWaypoint[]
  starWaypoints  StarWaypoint[]

  @@unique([name, firId])
  @@index([name])
}

model Vor {
  id         String   @id @default(cuid())
  ident      String
  name       String?
  frequency  String
  latitude   Float
  longitude  Float
  elevationFt Int?
  fir        Fir?     @relation(fields: [firId], references: [id])
  firId      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  boundaryPoints FrequencyBoundaryPoint[]
  sidWaypoints   SidWaypoint[]
  starWaypoints  StarWaypoint[]

  @@unique([ident, firId])
  @@index([ident])
}

model Ndb {
  id         String   @id @default(cuid())
  ident      String
  name       String?
  frequency  String
  latitude   Float
  longitude  Float
  fir        Fir?     @relation(fields: [firId], references: [id])
  firId      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  boundaryPoints FrequencyBoundaryPoint[]
  sidWaypoints   SidWaypoint[]
  starWaypoints  StarWaypoint[]

  @@unique([ident, firId])
  @@index([ident])
}

model FrequencyBoundary {
  id              String   @id @default(cuid())
  atcFrequency    AtcFrequency @relation(fields: [atcFrequencyId], references: [id])
  atcFrequencyId  String
  points          FrequencyBoundaryPoint[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model FrequencyBoundaryPoint {
  id         String   @id @default(cuid())
  boundary   FrequencyBoundary @relation(fields: [boundaryId], references: [id])
  boundaryId String
  order      Int
  lat        Float
  lon        Float
  fix        Fix?     @relation(fields: [fixId], references: [id])
  fixId      String?
  vor        Vor?     @relation(fields: [vorId], references: [id])
  vorId      String?
  ndb        Ndb?     @relation(fields: [ndbId], references: [id])
  ndbId      String?
}

model SidWaypoint {
  id         String @id @default(cuid())
  sid        Sid    @relation(fields: [sidId], references: [id])
  sidId      String
  order      Int
  name       String?
  lat        Float
  lon        Float
  altitudeRestriction String?
  speedRestriction    String?
  fix        Fix?   @relation(fields: [fixId], references: [id])
  fixId      String?
  vor        Vor?   @relation(fields: [vorId], references: [id])
  vorId      String?
  ndb        Ndb?   @relation(fields: [ndbId], references: [id])
  ndbId      String?
}

model StarWaypoint {
  id         String @id @default(cuid())
  star       Star   @relation(fields: [starId], references: [id])
  starId     String
  order      Int
  name       String?
  lat        Float
  lon        Float
  altitudeRestriction String?
  speedRestriction    String?
  fix        Fix?   @relation(fields: [fixId], references: [id])
  fixId      String?
  vor        Vor?   @relation(fields: [vorId], references: [id])
  vorId      String?
  ndb        Ndb?   @relation(fields: [ndbId], references: [id])
  ndbId      String?
}

model WeatherLog {
  id        String   @id @default(cuid())
  airport   Airport  @relation(fields: [airportId], references: [id])
  airportId String
  rawMetar  String
  rawTaf    String?
  timestamp DateTime
}

model CalendarEvent {
  id          String   @id @default(cuid())
  uid         String   @unique
  title       String
  description String?
  location    String?
  startTime   DateTime
  endTime     DateTime?
  type        String   @default("OTHER")
  source      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CalendarSync {
  id           String   @id @default(cuid())
  source       String   @unique
  lastSyncedAt DateTime?
  lastStatus   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AnalyticsEvent {
  id        String   @id @default(cuid())
  eventType String
  path      String
  locale    String?
  label     String?
  href      String?
  title     String?
  referrer  String?
  sessionId String?
  userId    String?
  createdAt DateTime @default(now())
}

model Menu {
  id        String     @id @default(cuid())
  key       String     @unique
  title     String?
  items     MenuItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model MenuItem {
  id         String    @id @default(cuid())
  menu       Menu      @relation(fields: [menuId], references: [id], onDelete: Cascade)
  menuId     String
  parent     MenuItem? @relation("MenuItemChildren", fields: [parentId], references: [id], onDelete: Cascade)
  parentId   String?
  children   MenuItem[] @relation("MenuItemChildren")
  label      String
  labelPt    String?
  description String?
  descriptionPt String?
  href       String?
  icon       String?
  layout     String?
  order      Int       @default(0)
  enabled    Boolean   @default(true)
  permission String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model StaffPosition {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  department  StaffDepartment? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  departmentId String?
  allowances  String   @default("[]")
  assignments StaffAssignment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
}

model StaffAssignment {
  id          String   @id @default(cuid())
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId      String?
  userVid     String
  position    StaffPosition @relation(fields: [positionId], references: [id], onDelete: Cascade)
  positionId  String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userVid, positionId])
  @@index([createdAt])
}

model StaffDepartment {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  order       Int      @default(0)
  permissions String   @default("[]")
  positions   StaffPosition[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order])
}

model AuditLog {
  id         String   @id @default(cuid())
  actorId    String?
  actor      User?    @relation(fields: [actorId], references: [id], onDelete: SetNull)
  action     String
  entityType String
  entityId   String?
  before     String?
  after      String?
  createdAt  DateTime @default(now())
}
