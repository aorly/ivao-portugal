generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(cuid())
  vid                String   @unique
  name               String
  email              String?  @unique
  emailVerified      DateTime?
  image              String?
  avatarUrl          String?
  role               String   @default("USER")
  discordId          String?
  navigraphId        String?
  friends            User[]   @relation("UserFriends")
  friendOf           User[]   @relation("UserFriends")
  registrations      EventRegistration[]
  trainingRequests   TrainingRequest[]
  trainingSessions   TrainingSession[]
  instructingSession TrainingSession[] @relation("Instructor")
  assignedRequests   TrainingRequest[] @relation("RequestTrainer")
  sessionComments    TrainingSessionComment[]
  accounts           Account[]
  sessions           Session[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String  @id @default(cuid())
  sessionToken String  @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Event {
  id             String               @id @default(cuid())
  slug           String               @unique
  title          String
  description    String
  startTime      DateTime
  endTime        DateTime
  airports       Airport[]            @relation("EventAirports")
  firs           Fir[]                @relation("EventFirs")
  bannerUrl      String?
  isPublished    Boolean              @default(false)
  registrations  EventRegistration[]
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
}

model EventRegistration {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  createdAt DateTime @default(now())

  @@unique([userId, eventId])
}

model Airport {
  id            String      @id @default(cuid())
  icao          String      @unique
  iata          String?
  name          String
  latitude      Float
  longitude     Float
  altitudeFt    Int
  fir           Fir?        @relation(fields: [firId], references: [id])
  firId         String?
  runways       String
  holdingPoints String
  frequencies   String      @default("[]")
  stands        Stand[]
  sids          Sid[]
  stars         Star[]
  charts        String?
  scenery       String?
  notes         String?
  events        Event[]     @relation("EventAirports")
  weatherLogs   WeatherLog[]
  atcFrequencies AtcFrequency[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Stand {
  id        String   @id @default(cuid())
  name      String
  lat       Float
  lon       Float
  airport   Airport  @relation(fields: [airportId], references: [id])
  airportId String
}

model Sid {
  id        String   @id @default(cuid())
  name      String
  runway    String
  airport   Airport  @relation(fields: [airportId], references: [id])
  airportId String
  createdAt DateTime @default(now())
  waypoints SidWaypoint[]
}

model Star {
  id        String   @id @default(cuid())
  name      String
  runway    String
  airport   Airport  @relation(fields: [airportId], references: [id])
  airportId String
  createdAt DateTime @default(now())
  waypoints StarWaypoint[]
}

model Fir {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String?
  boundaries  String
  airports    Airport[]
  events      Event[]  @relation("EventFirs")
  frequencies AtcFrequency[]
  fixes       Fix[]
  vors        Vor[]
  ndbs        Ndb[]
}

model AtcFrequency {
  id        String   @id @default(cuid())
  station   String
  name      String?
  frequency String
  lower     String?
  upper     String?
  restricted Boolean @default(false)
  fir       Fir?     @relation(fields: [firId], references: [id])
  firId     String?
  airport   Airport? @relation(fields: [airportId], references: [id])
  airportId String?
  createdAt DateTime @default(now())
  boundaries FrequencyBoundary[]
}

model Fix {
  id        String   @id @default(cuid())
  name      String
  latitude  Float
  longitude Float
  fir       Fir?     @relation(fields: [firId], references: [id])
  firId     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  boundaryPoints FrequencyBoundaryPoint[]
  sidWaypoints   SidWaypoint[]
  starWaypoints  StarWaypoint[]

  @@unique([name, firId])
}

model Vor {
  id         String   @id @default(cuid())
  ident      String
  name       String?
  frequency  String
  latitude   Float
  longitude  Float
  elevationFt Int?
  fir        Fir?     @relation(fields: [firId], references: [id])
  firId      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  boundaryPoints FrequencyBoundaryPoint[]
  sidWaypoints   SidWaypoint[]
  starWaypoints  StarWaypoint[]

  @@unique([ident, firId])
}

model Ndb {
  id         String   @id @default(cuid())
  ident      String
  name       String?
  frequency  String
  latitude   Float
  longitude  Float
  fir        Fir?     @relation(fields: [firId], references: [id])
  firId      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  boundaryPoints FrequencyBoundaryPoint[]
  sidWaypoints   SidWaypoint[]
  starWaypoints  StarWaypoint[]

  @@unique([ident, firId])
}

model FrequencyBoundary {
  id              String   @id @default(cuid())
  atcFrequency    AtcFrequency @relation(fields: [atcFrequencyId], references: [id])
  atcFrequencyId  String
  points          FrequencyBoundaryPoint[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model FrequencyBoundaryPoint {
  id         String   @id @default(cuid())
  boundary   FrequencyBoundary @relation(fields: [boundaryId], references: [id])
  boundaryId String
  order      Int
  lat        Float
  lon        Float
  fix        Fix?     @relation(fields: [fixId], references: [id])
  fixId      String?
  vor        Vor?     @relation(fields: [vorId], references: [id])
  vorId      String?
  ndb        Ndb?     @relation(fields: [ndbId], references: [id])
  ndbId      String?
}

model SidWaypoint {
  id         String @id @default(cuid())
  sid        Sid    @relation(fields: [sidId], references: [id])
  sidId      String
  order      Int
  name       String?
  lat        Float
  lon        Float
  altitudeRestriction String?
  speedRestriction    String?
  fix        Fix?   @relation(fields: [fixId], references: [id])
  fixId      String?
  vor        Vor?   @relation(fields: [vorId], references: [id])
  vorId      String?
  ndb        Ndb?   @relation(fields: [ndbId], references: [id])
  ndbId      String?
}

model StarWaypoint {
  id         String @id @default(cuid())
  star       Star   @relation(fields: [starId], references: [id])
  starId     String
  order      Int
  name       String?
  lat        Float
  lon        Float
  altitudeRestriction String?
  speedRestriction    String?
  fix        Fix?   @relation(fields: [fixId], references: [id])
  fixId      String?
  vor        Vor?   @relation(fields: [vorId], references: [id])
  vorId      String?
  ndb        Ndb?   @relation(fields: [ndbId], references: [id])
  ndbId      String?
}

model WeatherLog {
  id        String   @id @default(cuid())
  airport   Airport  @relation(fields: [airportId], references: [id])
  airportId String
  rawMetar  String
  rawTaf    String?
  timestamp DateTime
}

model TrainingSession {
  id            String  @id @default(cuid())
  user          User    @relation(fields: [userId], references: [id])
  userId        String
  instructor    User?   @relation("Instructor", fields: [instructorId], references: [id])
  instructorId  String?
  dateTime      DateTime
  type          String
  notes         String?
  comments      TrainingSessionComment[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TrainingRequest {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String
  message   String?
  status    String   @default("pending")
  assignedTrainer   User?    @relation("RequestTrainer", fields: [assignedTrainerId], references: [id])
  assignedTrainerId String?
  assignedAt        DateTime?
  availabilities    String   @default("[]")
  userVid    String?
  pilotRating String?
  atcRating   String?
  createdAt DateTime @default(now())
}

model TrainingSessionComment {
  id        String           @id @default(cuid())
  body      String
  session   TrainingSession  @relation(fields: [sessionId], references: [id])
  sessionId String
  author    User?            @relation(fields: [authorId], references: [id])
  authorId  String?
  createdAt DateTime         @default(now())
}

model TrainingExam {
  id          String   @id @default(cuid())
  title       String
  description String?
  link        String?
  dateTime    DateTime
  createdAt   DateTime @default(now())
}
